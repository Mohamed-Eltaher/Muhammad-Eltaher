				foreach($product_terms as $product_term){
					//$full = z_taxonomy_image_url($product_term->term_id);
					$product_title = get_field( 'product_title', $product_term );
					$small_image = get_field( 'small_image_for_home_page', $product_term );
					$small_image = $small_image['sizes']['medium'];
					//echo '<pre>';print_r($small_image);die();
				?>
