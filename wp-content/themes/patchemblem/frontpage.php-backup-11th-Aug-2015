						<h3><?php echo $product_title; ?></h3>
						<p><?php echo substr($product_term->description, 0, 97); ?></p>
						<a href="<?php echo home_url('/products'); ?>" onclick="set_view('<?php echo $product_term->term_id; ?>');">View Details</a>
					</div>
				</div>
				<?php
				}
				?>
				<script type="text/javascript">
					function set_view(args) {
						localStorage.setItem('li_id',args);
					}
				</script>				
			</div>
		</div>
		<?php
		}
